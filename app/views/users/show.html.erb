<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <%= image_tag current_user.avatar.url(:thumb) unless current_user.avatar.blank? %>
      </div>
    </div>
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= current_user.username %></h2>
        <a class="edit-profile" href=<%= edit_user_path(current_user) %>>
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><%= current_user.bio %></li>
        <li><%= current_user.email %></li>
        <li><%= current_user.phone %></li>
      </ul>
      <h2 class="name"><%= current_user.name %></h2>
    </div>
  </div>
</div>
<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
</div>
<div class="user-images">
	<% current_user.posts.each do |post| %>
  <div class="wrapper">
    <%= image_tag post.avatar.url unless post.avatar.blank? %>
  </div>
  <% end %>
</div>